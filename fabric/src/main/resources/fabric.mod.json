{
  "schemaVersion": 1,
  "id": "autoelytra",
  "version": "${version}",

  "name": "Auto Elytra",
  "description": "A client side mod that automatically switches your elytra and chestplate when you go to fly.",
  "authors": [ "NimajnebEC" ],
  "contact": {
    "sources": "https://github.com/NimajnebEC/auto-elytra",
    "issues": "https://github.com/NimajnebEC/auto-elytra/issues"
  },

  "license": "MIT",
  "icon": "icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [ "net.nimajnebec.autoelytra.fabric.AutoElytraFabric" ],
    "modmenu": [ "net.nimajnebec.autoelytra.fabric.ModMenuIntegration" ]
  },
  "mixins": [ "autoelytra.mixins.json" ],

  "depends": {
    "fabricloader": ">=0.16.9",
    "minecraft": "1.21.x",
    "fabric": "*"
  },

  "suggests": {
    "cloth-config": "*"
  }
}
